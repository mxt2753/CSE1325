import java.util.ArrayList;
import java.util.Scanner;
import java.text.DecimalFormat;

public class Store 
{
  private static ArrayList<Product> products = new ArrayList<>();
  private static ArrayList<Product> shoppingCart = new ArrayList<>();

  public static void main(String[] args) 
  {
    products.add(new TaxFree("Milk", 2.99));
    products.add(new TaxFree("Bread", 3.49));
    products.add(new TaxFree("Cheese", 4.99));
    products.add(new Taxed("Poptarts", 2.99));
    products.add(new Taxed("Donuts", 1.49));
    products.add(new Taxed("Ice Cream", 5.99));

    Scanner input = new Scanner(System.in);
    boolean done = false;
    while (!done) 
    {
      System.out.println("Available Products:");
      for (int i = 0; i < products.size(); i++) 
      {
        System.out.println(i + 1 + ") " + products.get(i));
      }

      System.out.println("Shopping Cart:");
      for (Product product : shoppingCart) 
      {
        System.out.println(product);
      }

      System.out.print("Enter the product number to purchase (or -1 to exit): ");
      int productNum = input.nextInt();
      if (productNum < 0) 
      {
        done = true;
        continue;
      }

      try 
      {
        shoppingCart.add(products.get(productNum - 1));
      } catch (Exception e) 
      {
        System.out.println("Invalid product number.");
      }
    }

    input.close();
  }
}





